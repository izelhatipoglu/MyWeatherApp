<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.izelhatipoglu.myweatherapp.model.forecastResponse.ForecastMainResponseModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/cl_current"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/degree_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:text="@{String.valueOf(model.current.temp_c)}"
                android:textColor="@color/white"
                android:textSize="50sp"
                tools:text="26.0"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/weather_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_date"
                app:setImageWithUrl="@{model.current.condition.icon}"
                />


            <TextView
                android:id="@+id/city_tv"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="20dp"
                android:text="@{model.location.name}"
                android:textColor="@color/white"
                android:gravity="end"
                android:ellipsize="marquee"
                android:textSize="27sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/degree_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="20dp"
                android:text="@{model.location.localTime.substring(0, model.location.localTime.indexOf(' '))}"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/city_tv" />

            <TextView
                android:id="@+id/tv_weather"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:text="@{model.current.condition.text}"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/degree_tv"
                app:layout_constraintEnd_toStartOf="@id/weather_iv"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@id/degree_tv" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/effect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingHorizontal="14dp"
            android:src="@drawable/effect"
            app:layout_constraintTop_toBottomOf="@id/cl_current" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/home_end_bg"
            android:orientation="vertical"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/effect">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyler_view_clock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingHorizontal="3dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/item_clock_row" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyler_view_day"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/item_day_row" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
